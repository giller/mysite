extends ../layouts/base

block content
    .row.no-margin-top
        .col-md-8.col-md-offset-2
                    
            if model !== null && model.length > 0
                -model = model[0]
                -model.d = new Date(model.createdAt).toDateString()
                //--githubAnchor = document.createElement('a')
                //--githubAnchor.setAttribute('href', model.githubUrl)
                //--githubAnchor.innerHtml = model.githubUrl
                h2= model.title
                h5.italic= 'Added: ' + model.d + ' - ' + model.hostedUrl + ' - ' + model.githubUrl
                !{model.content}
            else
                h2 Something went wrong retrieving the project! Please try again later.
