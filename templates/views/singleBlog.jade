extends ../layouts/base

block content
    .row.no-margin-top
        .col-md-8.col-md-offset-2
            if model !== null && model.length > 0
                -model = model[0]
                h2 #{model.title}
                -model.d = new Date(model.createdAt).toDateString()
                h4.italic Published at #{model.d}
                !{model.content}
            else
                h1 Whoops! Something went wrong retrieving this post. Please try again!
