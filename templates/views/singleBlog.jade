extends ../layouts/base

block content
    .row.no-margin-top
        .col-md-8.col-md-offset-2
            if model !== null && model.length > 0
                -
                    model = model[0]
                    date = new Date(model.createdAt).toDateString()
                    str = 'Published on ' + date
                h2 #{model.title}
                h4.italic #{str}
                |!{model.content}
            else
                h1 Whoops! Something went wrong retrieving this post. Please try again!
